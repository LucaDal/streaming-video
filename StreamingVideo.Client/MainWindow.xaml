<Window x:Class="StreamingVideo_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:StreamingVideo_Client"
        mc:Ignorable="d"
        Title="Streaming Video"
        Height="450" 
        Topmost="True"
        Background="#2d2d30"
        Width="800" Name="class">

    <Grid Background="#2d2d30" Margin="5">

        <MediaElement x:Name="VideoPlayer"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      Stretch="Uniform"/>

        <!-- Controlli -->
        <Grid MouseEnter="commands_MouseEnter"
              MouseLeave="commands_MouseLeave"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Stretch"
              Background="Transparent">

            <Grid x:Name="controls">
                <Grid.Background>
                    <SolidColorBrush Color="#252526" Opacity=".6"/>
                </Grid.Background>
                <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom" 
                        Margin="0,0,10,0">
                    <wpf:SymbolIcon Symbol="HeadphonesSoundWave24" Margin="0,8,10,10" Foreground="LightGray"/>
                    <Slider x:Name="volumeSlider" VerticalAlignment="Center" ValueChanged="ChangeMediaVolume" 
                    Minimum="0" Maximum="1" Value="1" Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="30,5,30,30">
                    <Slider x:Name="timelineSlider" Margin="5" 
                        PreviewMouseLeftButtonUp="timelineSlider_PreviewMouseLeftButtonUp"
                        HorizontalAlignment="Stretch">
                    </Slider>

                </StackPanel>

                <StackPanel x:Name="commands"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom">
                    <wpf:Button Appearance="Dark" Icon="{wpf:SymbolIcon Symbol=Play24}" Width="80" Margin="5" Click="BtnPlay_Click"/>
                    <wpf:Button Appearance="Dark" Icon="{wpf:SymbolIcon Symbol=Pause24}" Width="80" Margin="5" Click="BtnPause_Click"/>
                    <wpf:Button Appearance="Dark" Icon="{wpf:SymbolIcon Symbol=Stop24}" Width="80" Margin="5" Click="BtnStop_Click"/>
                    <wpf:Button Appearance="Dark" Icon="{wpf:SymbolIcon Symbol=ArrowMaximize24}" x:Name="bt_fullScreen" Width="80" Margin="5" Click="BtnFullScreen_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
